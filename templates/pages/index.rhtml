<section id="articles">
  <% for article in articles[0...3] %>
    <article class="post">
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
        <span class="date"><%= article.date %></span>
      </header>

      <section class="content">
        <%= article.summary.gsub(/<\/?[^>]*>/, "")[0..300] %>
      </section>
      <div class="more"><a href="<%= article.path %>">read on &raquo;</a></div>
      <br />
      <div><% article.tags.each do |tag|%> <%= tag %> <% end %> </div>
    </article>
  <% end %>
</section>

<section id="archives">
  <%= archives[3..-1] %>
</section>
